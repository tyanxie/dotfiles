# 官方文档：https://ghostty.org/docs/config/reference

# 主题样式
theme = "light:Catppuccin Latte,dark:Catppuccin Mocha"

# 字体大小
font-size = 18
# 字体 `ghostty +list-fonts`
font-family = "Maple Mono NF CN Medium"
# 字体绘制加粗
font-thicken = true

# 窗口
window-padding-x = 10
window-padding-y = 10,5
macos-titlebar-style = hidden

# 背景透明度
background-opacity = 0.75
# 背景模糊
background-blur = 20

# 输入文本时隐藏鼠标
mouse-hide-while-typing = true

# 关闭窗口时不显示确认提示
confirm-close-surface = false

# 自定义着色器配置，通常用于配置光标动画，来源：https://github.com/KroneCorylus/ghostty-shader-playground
custom-shader = "~/.config/ghostty/shaders/cursor_smear_rainbow.glsl"

# 指定全屏时使用的模式
macos-non-native-fullscreen = "visible-menu"

# 在最后一个窗口关闭后退出
quit-after-last-window-closed = true

# 颜色空间
alpha-blending = "linear-corrected"

# 快捷键
keybind = command+shift+N=toggle_fullscreen
